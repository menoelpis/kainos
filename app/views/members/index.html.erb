<article ng-app="members" ng-controller="MemberSearchController">
	<header>
		<h1 class="h2">
			Member Search
		</h1>
	</header>

	<section class="search-form">
		<form>
			<label for="search.keywords" class="sr-only">Keywords</label>
			<input type="text"
				   name="keywords"
				   class="form-control input-lg"
				   placeholder="First Name, Last Name, or Email Address"
				   ng-change="search(keywords)"
				   ng-model="keywords">
		</form>
	</section>

	<section class="search-results">
		<header>
			<h1 class="h3">Results</h1>
		</header>

		<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>

		<ol class="list-group">
			<li class="list-group-item clearfix" 
				ng-repeat="member in members">
				<h3 class="pull-right">
					<small class="text-uppercase">Joined</small>
					{{ member.created_at | date }}
				</h3>
				<h2 class="h3">
					{{ member.first_name }} {{ member.last_name }}
					<small>{{ member.username }}</small>
				</h2>
				<h4>{{ member.email }}</h4>
			</li>
		</ol>
		<%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
	</section>
</article>